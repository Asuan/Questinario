<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" android:padding="2dp"
    android:background="@drawable/gradient_collapsed">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/inquirer_name_la" android:textStyle="bold" android:gravity="left"
            android:layout_gravity="left|center_vertical" android:layout_weight="10"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium" android:text="2"
              android:id="@+id/inquirer_questions_count_la" android:gravity="right"
              android:layout_gravity="center_vertical|right" android:layout_weight="0"
        android:maxLines="1"
        android:singleLine="true"
        android:textAlignment="center" />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/question_type_la" android:layout_gravity="center|right" android:adjustViewBounds="false"
            android:src="@drawable/ic_launcher"/>
</LinearLayout>